<div class="container-main">
	<h2>Signup</h2>

	<form action="/auth/signup" method="POST" id="form-signup">
		<div class="form-group">
			<label for="username">Username</label>
			<input id="username" type="text" class="form-control" name="username" placeholder="JonSnow" required>
		</div>
		<div class="form-group">
			<label for="email">Email</label>
			<input id="email" type="email" class="form-control" name="email" placeholder="johndoe@email.com" required>
		</div>
		<div class="form-group">
			<label for="password">Password</label>
			<input id="password" type="password" class="form-control" name="password" placeholder="Your password" required>
		</div>
		{{#if errorMessage }}
		<div class="error-message">{{ errorMessage }}</div>
		{{/if}}


		<button type="submit" class="btn btn-link orange orange-link">Create account</button>

		<p class="account-message">
			Do you already have an account?
			<a href="/auth/login">Login</a>
		</p>
	</form>
</div>